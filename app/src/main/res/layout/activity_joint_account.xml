<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20sp">

        <Spinner
            android:id="@+id/joint_account_spn_user_selection"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/type"
            style="@android:style/Widget.Holo.Light.Spinner"/>

        <Button
            android:id="@+id/joint_account_btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/joint_account_spn_user_selection"
            android:layout_centerHorizontal="true"
            android:text="@string/create_joint_account"
            android:onClick="createJointAccount"/>

    </RelativeLayout>
</ScrollView>
