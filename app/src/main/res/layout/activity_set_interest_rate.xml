<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20sp">

        <Spinner
            android:id="@+id/set_interest_rate_spn_type_selection"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/type"
            style="@android:style/Widget.Holo.Light.Spinner"/>

        <EditText
            android:id="@+id/set_interest_rate_et_interest_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_interest_rate_spn_type_selection"
            android:hint="@string/new_interest_rate"
            android:inputType="numberDecimal"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/set_interest_rate_btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/set_interest_rate_et_interest_rate"
            android:layout_centerHorizontal="true"
            android:text="@string/submit_button_text"
            android:onClick="submitInterestRate"/>

    </RelativeLayout>

</ScrollView>